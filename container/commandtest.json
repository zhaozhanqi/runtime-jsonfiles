{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "expansion-pod"
  },
  "spec": {
    "containers": [
      {
        "name": "test-container",
        "image": "openshift/hello-openshift",
        "command": [
          "/bin/sh",
          "-c",
          "echo $(PUBLIC_URL)"
        ],
        "env": [
          {
            "name": "PUBLIC_URL",
            "value": "http"
          }
        ]
      }
    ],
    "restartPolicy": "Never"
  }
}
